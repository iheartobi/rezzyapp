<h1>Login</h1>

<% if @error %>
    <p style="color: blue;"><%= @error %></p>
<% end %>



    <%= form_for(:session, url: login_path) do %>
        <%= label_tag ("Username: ") %><br>
        <%= text_field_tag(:username) %><br>
        <%= label_tag("Password: ") %><br>
        <%= password_field_tag(:password) %><br>
        <%= submit_tag("Login") %><br>

    <% end %><br>

   
    <h4><%= link_to("Need an account? Create one here.", new_user_path) %></h4>
