<h1>Login</h1>

<% if @error %>
    <p style="color: blue;"><%= @error %></p>
<% end %>

    <%= form_tag do %>
        <%= label_tag ("Username: ") %>
        <%= text_field_tag(:username) %>
        <%= label_tag("Password: ") %>
        <%= password_field_tag(:password) %>
        <%= submit_tag("Login") %>

    <% end %><br>


    <h4><%= link_to("Need an account? Create one here.", new_user_path) %></h4>
